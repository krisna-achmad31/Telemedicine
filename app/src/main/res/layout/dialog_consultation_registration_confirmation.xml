<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_consultation_registration_confirmation_iv_photo"
            android:layout_width="320dp"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_person"
            tools:ignore="VectorDrawableCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/dialog_consultation_registration_confirmation_tv_name"
                style="@style/TextAppearance.MaterialComponents.Headline4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:text="Pradipta Priya Adyatmika"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_consultation_registration_confirmation_tv_poly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Poli"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/grey_400" />

            <TextView
                android:id="@+id/dialog_consultation_registration_confirmation_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Hari"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_consultation_registration_confirmation_tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tanggal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dialog_consultation_registration_confirmation_tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:text="Harga"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialog_consultation_registration_confirmation_btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar Konsultasi" />

            <TextView
                android:id="@+id/dialog_consultation_registration_confirmation_btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Kembali" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>