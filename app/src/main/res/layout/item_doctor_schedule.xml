    <com.google.android.material.card.MaterialCardView
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_poly"
                style="@style/TextBody1Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:fontFamily="@font/inter_family"
                android:text="@{doctorSchedule.poli}"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:fontFamily="@font/inter_family"
                android:layout_marginTop="16dp"
                android:src="@drawable/shape_dotted_grey"
                app:layout_constraintTop_toBottomOf="@id/tv_poly" />

            <TextView
                android:id="@+id/tv_date"
                style="@style/TextBody2Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_family"
                android:textStyle="bold"
                android:text="@{doctorSchedule.tanggal}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <TextView
                android:id="@+id/tv_day_label"
                style="@style/TextBody2Style"
                android:fontFamily="@font/inter_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Hari: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_date" />

            <TextView
                android:id="@+id/tv_day"
                style="@style/TextBody2Style"
                android:layout_width="0dp"
                android:fontFamily="@font/inter_family"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{doctorSchedule.hari}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_day_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_date" />

            <TextView
                android:id="@+id/tv_time_label"
                style="@style/TextBody2Style"
                android:fontFamily="@font/inter_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:text="Waktu: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_day_label" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/TextBody2Style"
                android:layout_width="0dp"
                android:fontFamily="@font/inter_family"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{doctorSchedule.waktu}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_time_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_day" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>