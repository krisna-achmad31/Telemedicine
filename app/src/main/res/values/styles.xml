<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/droidsans_family</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
    <!--    New application theme-->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- ... -->
        <item name="android:fontFamily">@font/droidsans_family</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background for the search query section (e.g. EditText) -->
<!--        <item name="queryBackground">...</item>-->
        <!-- Background for the actions section (e.g. voice, submit) -->
        <!--<item name="submitBackground">...</item>-->
        <!-- Close button icon -->
<!--        <item name="closeIcon">...</item>-->
        <!-- Search button icon -->
        <item name="android:fontFamily">@font/droidsans_family</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="editTextColor">@color/white</item>
        <item name="searchIcon">@drawable/search_icon</item>

        <!-- Go/commit button icon -->
<!--        <item name="goIcon">...</item>-->
        <!-- Voice search button icon -->
        <!--<item name="voiceIcon">...</item>-->
        <!-- Commit icon shown in the query suggestion row -->
<!--        <item name="commitIcon">...</item>-->
        <!-- Layout for query suggestion rows -->
<!--        <item name="suggestionRowLayout">...</item>-->
    </style>

    <!--    Style for Progress Bar-->
    <style name="AppProgressBar" parent="SpinKitView.Large.FadingCircle">
        <item name="android:fontFamily">@font/droidsans_family</item>
        <item name="android:indeterminate">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="SpinKit_Color">@color/colorPrimaryDark</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- android:datePickerStyle was not added until API 21 -->
        <item name="android:fontFamily">@font/droidsans_family</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
    </style>

    <style name="DatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:fontFamily">@font/droidsans_family</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/droidsans_family</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="CommonTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:fontFamily">@font/droidsans_family</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="android:paddingTop">0dp</item>
        <item name="paddingStart">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_rounded_background</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="CommonEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/droidsans_family</item>
        <item name="android:layout_height">48dp</item>
        <item name="paddingStart">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="singleLine">true</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="TextHeader1Style" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/poppins_family</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextBody1Style" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBody2Style" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBody3Style" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CommonButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/droidsans_family</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="CommonSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:fontFamily">@font/droidsans_family</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">40dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:fontFamily">@font/droidsans_family</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:fontFamily">@font/droidsans_family</item>
        <item name="android:background">@drawable/bg_bottom_sheet_dialog</item>
    </style>
</resources>